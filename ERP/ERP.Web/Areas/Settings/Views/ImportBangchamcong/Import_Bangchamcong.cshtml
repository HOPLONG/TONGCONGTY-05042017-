
@{
    ViewBag.Title = "Import_Bangluong";
    Layout = "~/Areas/Settings/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HOPLONG | Trang chủ</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link href="~/Content/download/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Roboto:100,400,300,500,700' rel='stylesheet' type='text/css'>
    <link href="~/Content/download/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Shadows+Into+Light' rel='stylesheet' type='text/css'>
    <link href="~/Content/self-writing/Layout-CSS.css" rel="stylesheet" />
    <link href="~/Content/self-writing/css/ImportFile.css" rel="stylesheet" />

</head>
<body class="hold-transition skin-blue sidebar-mini">

    <div class="content">
        <div class="card">
            <div class="container-fliud" style="padding-top: 2%">

                <div class="wrapper row">
                    <div class="preview col-md-5">
                        <div class="preview-pic tab-content">
                            <img src="~/Content/self-writing/Images/hoplong.jpg" style="padding-top:10%" width="660" height="600" />
                        </div>
                    </div>
                    <div class="details col-md-5">
                        <h3 class="product-title">Description</h3>
                        <p class="product-description">Chọn mục mà bạn muốn nhập khẩu dữ liệu bằng excel tương ứng với các mục bên dưới.</p>
                        <br />
                        <table style="width: 100%">
                            <tr>
                                <td>
                                        <!--Button bảng chấm công-->
                                        <div class="style_prevu_kit" style="background-color:#5BC0DE;">
                                            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#modal" style="border: none; border-radius:16px"><i class="fa fa-upload fa-3x"></i></button>
                                        </div>
                                        <!------------------------------------------------------------>
                                </td>
                            
                            </tr>
                            <tr style="border-top: 0px">
                                <td style="padding-top: 20px;padding-bottom: 20px">Bảng chấm công</td>
                            </tr>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!------------------------------------------------------------>
    <!-- Modal Bảng chấm công-->
    <div class="modal fade" id="modal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">

                    <br />
                    @using (Html.BeginForm("Import_Bangchamcong", "ImportBangchamcong", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                            <!-- Form Name -->
                        <table>
                            <tr>
                                <th><h1>Bảng chấm công</h1></th>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <hr />
                                    <input type="file" name="UploadedFile" class="file" value="Choose File From Your Computer">
                                    <br />
                                    <input type="submit" class="btn btn-success" value="Add" />

                                </td>

                            </tr>
                            <tr>
                                <td colspan="2">Dữ liệu trên tệp mà chưa có trong hệ thống thì sẽ được thêm vào, các dữ liệu khác sẽ giữ nguyên</td>

                            </tr>
                            <tr>
                                <td colspan="2">
                                    <p style="color:blue">@ViewBag.Message</p>
                                    <p style="color:blue">@ViewBag.Information</p>
                                    <p style="color:red">@ViewBag.Error</p>
                                </td>

                            </tr>
                        </table>




                    }

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Exit</button>
                </div>
            </div>
        </div>
    </div>
    <!--END MODAL-->

    <!-- jQuery 2.2.3 -->
    <script src="~/Content/download/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>

</body>

</html>